  "components": {
    "schemas": {
      "ClienteInputModel": {
        "required": [
          "cpf",
          "nome"
        ],
        "type": "object",
        "properties": {
          "nome": {
            "maxLength": 100,
            "minLength": 3,
            "type": "string"
          },
          "cpf": {
            "maxLength": 11,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ContaInputModel": {
        "required": [
          "clienteId",
          "numero",
          "saldo",
          "tipo",
          "titular"
        ],
        "type": "object",
        "properties": {
          "numero": {
            "maximum": 99999,
            "minimum": 1000,
            "type": "integer",
            "format": "int32"
          },
          "titular": {
            "maxLength": 100,
            "minLength": 3,
            "type": "string"
          },
          "saldo": {
            "maximum": 10000,
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          },
          "tipo": {
            "$ref": "#/components/schemas/TipoConta"
          },
          "clienteId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "ContaViewModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "numero": {
            "type": "integer",
            "format": "int32"
          },
          "titular": {
            "type": "string",
            "nullable": true
          },
          "saldo": {
            "type": "number",
            "format": "double"
          },
          "tipo": {
            "$ref": "#/components/schemas/TipoConta"
          },
          "dataCriacao": {
            "type": "string",
            "format": "date-time"
          },
          "clienteId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "DepositoInputModel": {
        "required": [
          "valor"
        ],
        "type": "object",
        "properties": {
          "valor": {
            "maximum": 1000000,
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "TipoConta": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      }
    }
  }
